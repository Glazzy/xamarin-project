<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="netflixRoulette.MoviePage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Label x:Name="Title"
					Text="MOVIE_TITLE"
				   FontSize="32"
				   FontAttributes="Bold"
					   TextColor="Black"
				   HorizontalTextAlignment="Center"/>
				<Label x:Name="Tagline"
					Text="MOVIE_TAGLINE"
				   FontSize="16"
				   FontAttributes="Italic"
				   HorizontalTextAlignment="Center"/>
				<Image x:Name="Backdrop" />
				<StackLayout Orientation="Horizontal"
						 HorizontalOptions="Center">
					<Label x:Name="Released"
						Text="MOVIE_YEAR"
					   FontSize="16" 
					   VerticalTextAlignment="Center"/>
					<Label Text="/"
					   FontSize="20" />
					<Label x:Name="Runtime"
						Text="MOVIE_RUNTIME"
					   FontSize="16"  
					   VerticalTextAlignment="Center"/>
					<Label Text="/"
					   FontSize="20"/>
					<Label x:Name="Genre"
						Text="MOVIE_GENRE"
					   FontSize="16" 
					   VerticalTextAlignment="Center"/>
				</StackLayout>
				<StackLayout Orientation="Horizontal">
					<Image x:Name="Poster"
					   HeightRequest="200"/>
					<Label x:Name="Overview"
						Text="MOVIE_OVERVIEW"
					   FontSize="16" />
				</StackLayout>
				<Label Text="Cast"
				   BackgroundColor="DarkSalmon"
				   FontSize="24"
				   HorizontalTextAlignment="Center"/>
				<Grid x:Name="CastGrid">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
				</Grid>
				<Label Text="See full cast..."
					   FontSize="20"
					   BackgroundColor="ForestGreen"
					   HorizontalTextAlignment="Center"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>